{
  "extends": ["eslint:recommended", "plugin:vue/recommended"],
  "parser": "vue-eslint-parser",
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "max-len": ["error", { "code": 120, "ignoreUrls": true }]
  }
}
